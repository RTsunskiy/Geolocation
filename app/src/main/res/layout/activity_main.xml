<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@color/colorYellow"
    android:orientation="vertical"
    tools:context=".presentetion.MainActivity">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/defaul_padding"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        tools:text="Moscow" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/longtitude_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/defaul_padding"
            android:text="Долгота: " />

        <TextView
            android:id="@+id/longtitude_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/defaul_padding"
            tools:text="55.0987654" />

        <TextView
            android:id="@+id/llatitude_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/defaul_padding"
            android:text="Широта: " />

        <TextView
            android:id="@+id/latitude_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/defaul_padding"
            tools:text="98.9879873" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/current_degrees_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/defaul_padding"
            android:text="@string/current_degrees"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/current_degrees"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            tools:text="32" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/max_degrees_today_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/defaul_padding"
            android:text="@string/max_degrees_today"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/max_degrees_today"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/defaul_padding"
            android:textSize="15sp"
            tools:text="30" />
    </LinearLayout>

        <TextView
            android:id="@+id/min_degrees_today_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/defaul_padding"
            android:text="@string/min_degrees_today"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/min_degrees_today"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/defaul_padding"
            android:textSize="15sp"
            tools:text="30" />
    </LinearLayout>

